void handleInput(SDL_Event event)
{
    // Handle keyboard events
    if (event.type == SDL_KEYDOWN)
    {
        switch (event.key.keysym.sym)
        {
            case SDLK_w:
                handleCollision(cameraX, cameraY - cameraSpeed, &cameraX, &cameraY);  // Move camera up
                break;
            case SDLK_s:
                handleCollision(cameraX, cameraY + cameraSpeed, &cameraX, &cameraY);  // Move camera down
                break;
            case SDLK_a:
                handleCollision(cameraX - cameraSpeed, cameraY, &cameraX, &cameraY);  // Move camera left
                break;
            case SDLK_d:
                handleCollision(cameraX + cameraSpeed, cameraY, &cameraX, &cameraY);  // Move camera right
                break;
        }
    }
}
